# Note that this file gets run first when logging in via ssh or terminal
# It does not run again if you open subshells. 
# Any changes here while in sway will not get updated until re-login.

export ZDOTDIR="$HOME/.config/zsh"

#
# Editors
#
export EDITOR='nvim'
export VISUAL='nvim'
export PAGER='less'

# We can set clean option if too much is getting loaded
#export VISUAL='nvim --clean'

#
# Language
#
if [[ -z "$LANG" ]]; then
  export LANG='en_US.UTF-8'
fi


# skip this when using zim
skip_global_compinit=1


